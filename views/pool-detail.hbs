<section class="details-header">

  <h2>{{poolItem.name}}</h2>
  <p>Address: {{poolItem.address}}, {{poolItem.arrondissement}}</p>
  <a class="btn-main" href="#0">Book a Session</a>
  <a class="go-back" href="/pool-list">Go back to the list</a>
</section>

<section>

  <ul class="details-list">
    {{#each poolItem.activities}}
    <li>
      <h3>{{this}}</h3>
    </li>
    {{/each}}
  </ul>
  <hr>
  <div class="flex-line">
    <p><b>Metro Stop:</b> {{poolItem.metroStop}}</p>
    <img src="{{poolItem.metroLine}}" alt="">
  </div>
  <p><b>Telephone:</b> {{poolItem.phone}}</p>

  <p><b>Disabled Access:</b> {{poolItem.disabledAccess}}</p>
  <iframe src="{{poolItem.map}}" width="100%" height="500" frameborder="0" style="border:0" allowfullscreen></iframe>

</section>
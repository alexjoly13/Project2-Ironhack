<section class="details-header">

  <h2>{{gymItem.name}}</h2>
  <p>{{gymItem.address}}, {{gymItem.arrondissement}}</p>
  <a class="btn-main" href="/gym-list/{{gymItem._id}}/create-rdv">Book a Session</a>
  <a class="go-back" href="/gym-list"> -- Go back to the list</a>
</section>

<section>

  <ul class="details-list">
    {{#each gymItem.sports}}
    <li>
      <h3>{{this}}</h3>
    </li>
    {{/each}}
  </ul>
  <hr>
  <div class="flex-line">
    <p><b>Metro Stop:</b> {{gymItem.metroStop}}</p>
    <img src="{{gymItem.metroLine}}" alt="">
  </div>
  <p><b>Telephone:</b> {{gymItem.phone}}</p>


  <p><b>Disabled Access:</b> {{gymItem.disabledAccess}}</p>
  <hr>
  <h4>Location:</h4>

  <iframe src="{{gymItem.map}}" width="100%" height="500px" frameborder="0" style="border:0" allowfullscreen></iframe>

</section>